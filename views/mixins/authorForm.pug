mixin authorForm(author, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='first_name') First Name
                input(id='first)name' name='first_name' value=author.firstname)

            div.form-input
                label(for='last_name') Last Name
                input(id='last_name' name='last_name' value=author.lastname)

            div.form-input
                label(for='dob') Date Of Birth
                select(id='dob' name='dob')
                    each dob in [90,91,92,93,94,95,96,97,98,99,00]

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button(type='submit') Save